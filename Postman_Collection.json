{
	"info": {
		"_postman_id": "order-processing-system-collection",
		"name": "Order Processing System API",
		"description": "Collection for testing Order Processing System endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Orders",
			"item": [
				{
					"name": "Create Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"orderId\", jsonData.id);",
									"    console.log(\"Order created with ID: \" + jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Ocp-Apim-Subscription-Key",
								"value": "{{apimSubscriptionKey}}",
								"type": "text",
								"disabled": true
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"customerName\": \"John Doe\",\n    \"customerEmail\": \"john.doe@example.com\",\n    \"shippingAddress\": \"123 Main Street, City, State 12345\",\n    \"items\": [\n        {\n            \"productId\": \"PROD-001\",\n            \"productName\": \"Laptop\",\n            \"quantity\": 1,\n            \"unitPrice\": 999.99\n        },\n        {\n            \"productId\": \"PROD-002\",\n            \"productName\": \"Mouse\",\n            \"quantity\": 2,\n            \"unitPrice\": 29.99\n        }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{apiBaseUrl}}/api/orders",
							"host": [
								"{{apiBaseUrl}}"
							],
							"path": [
								"api",
								"orders"
							]
						},
						"description": "Creates a new order and publishes an event to Event Grid"
					},
					"response": []
				},
				{
					"name": "Get All Orders",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Ocp-Apim-Subscription-Key",
								"value": "{{apimSubscriptionKey}}",
								"type": "text",
								"disabled": true
							}
						],
						"url": {
							"raw": "{{apiBaseUrl}}/api/orders",
							"host": [
								"{{apiBaseUrl}}"
							],
							"path": [
								"api",
								"orders"
							]
						},
						"description": "Retrieves all orders from Cosmos DB"
					},
					"response": []
				},
				{
					"name": "Get Order by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Ocp-Apim-Subscription-Key",
								"value": "{{apimSubscriptionKey}}",
								"type": "text",
								"disabled": true
							}
						],
						"url": {
							"raw": "{{apiBaseUrl}}/api/orders/{{orderId}}",
							"host": [
								"{{apiBaseUrl}}"
							],
							"path": [
								"api",
								"orders",
								"{{orderId}}"
							]
						},
						"description": "Retrieves a specific order by ID"
					},
					"response": []
				}
			],
			"description": "Order management endpoints"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "apiBaseUrl",
			"value": "https://localhost:7000",
			"type": "string"
		},
		{
			"key": "apimSubscriptionKey",
			"value": "",
			"type": "string"
		},
		{
			"key": "orderId",
			"value": "",
			"type": "string"
		}
	]
}

